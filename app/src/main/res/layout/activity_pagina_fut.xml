            app:layout_constraintTop_toBottomOf="@+id/activity_pagina_fut_lucro_prejuizo"
            tools:text="R$ 450,00" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/activity_pagina_fut_group_padrao_avulso"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:constraint_referenced_ids="activity_pagina_fut_texto_padrao_avulso,activity_pagina_fut_padrao_avulso"/>


        <androidx.constraintlayout.widget.Group
            android:id="@+id/activity_pagina_fut_group_padrao_mensalista"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:constraint_referenced_ids="activity_pagina_fut_padrao_mensalista,activity_pagina_fut_texto_padrao_mensalista"/>

