    <CheckBox
        android:id="@+id/activity_pagina_fut_checkbox_selecionar_todos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_pagina_fut_dados_fut"
        android:text="@string/selecionar_todos"
        android:visibility="gone"/>

    <ListView
        android:id="@+id/activity_pagina_fut_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_pagina_fut_checkbox_selecionar_todos"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-1dp"
        tools:listitem="@layout/item_jogadorfut" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/activity_pagina_fut_fab_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:contentDescription="@string/add"
        android:src="@drawable/ic_action_add" />
