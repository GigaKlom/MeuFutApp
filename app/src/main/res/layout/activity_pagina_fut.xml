            android:id="@+id/activity_pagina_fut_group_ganho_avulsos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:constraint_referenced_ids="activity_pagina_fut_texto_ganho_com_avulsos,activity_pagina_fut_ganho_esperado_avulsos"/>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/activity_pagina_fut_group_lucro_prejuizo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            app:constraint_referenced_ids="activity_pagina_fut_lucro_prejuizo,activity_pagina_fut_texto_lucro_prejuizo"/>
