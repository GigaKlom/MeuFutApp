            tools:text="MENSAL"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/activity_pagina_fut_switch"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/activity_pagina_fut_tipo"
            app:layout_constraintTop_toBottomOf="@+id/activity_pagina_fut_textview_local"/>

        <TextView
            android:id="@+id/activity_pagina_fut_dia_semana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/activity_pagina_fut_textview_local"
            app:layout_constraintTop_toBottomOf="@+id/activity_pagina_fut_textview_titulo_novos_jogadores_disponiveis"
            tools:text="DOMINGO"/>

        <TextView
            android:id="@+id/activity_pagina_fut_texto_padrao_avulso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/padrao_avulso"
