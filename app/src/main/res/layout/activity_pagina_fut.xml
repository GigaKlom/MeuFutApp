            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_pagina_fut_texto_ganho_com_mensalistas"/>

        <TextView
            android:id="@+id/activity_pagina_fut_lucro_prejuizo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/activity_pagina_fut_texto_lucro_prejuizo"
            app:layout_constraintTop_toBottomOf="@+id/activity_pagina_fut_ganho_esperado_mensalistas"
            tools:text="R$ 50,00"/>

        <TextView
            android:id="@+id/activity_pagina_fut_texto_ganho_com_avulsos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="@string/ganho_com_avulsos"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_pagina_fut_texto_lucro_prejuizo"/>

        <TextView
            android:id="@+id/activity_pagina_fut_ganho_esperado_avulsos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            android:textSize="15sp"
            android:textStyle="bold"
