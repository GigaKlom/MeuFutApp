            activity_pagina_fut_textview_titulo_novos_jogadores_disponiveis,
            activity_pagina_fut_textview_novos_jogadores_disponiveis,
            activity_pagina_fut_imagebutton_assistir_rewardedAd"/>

        <TextView
            android:id="@+id/activity_pagina_fut_textview_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_pagina_fut_textview_titulo_novos_jogadores_disponiveis"
            tools:text="Portuguesa Santista"/>

        <TextView
