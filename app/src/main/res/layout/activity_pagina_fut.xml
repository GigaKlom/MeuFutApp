            android:id="@+id/activity_pagina_fut_group_numero_jogadores"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:constraint_referenced_ids="activity_pagina_fut_texto_jogadores,activity_pagina_fut_numero_jogadores"/>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/activity_pagina_fut_group_numero_mensalistas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:constraint_referenced_ids="activity_pagina_fut_texto_mensalistas,activity_pagina_fut_numero_mensalistas"/>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/activity_pagina_fut_group_preco_quadra"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:constraint_referenced_ids="activity_pagina_fut_texto_preco_da_quadra,activity_pagina_fut_preco_da_quadra"/>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/activity_pagina_fut_group_ganho_mensalistas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:constraint_referenced_ids="activity_pagina_fut_texto_ganho_com_mensalistas,activity_pagina_fut_ganho_esperado_mensalistas"/>

