            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/activity_pagina_fut_texto_mensalistas"
            app:layout_constraintTop_toBottomOf="@+id/activity_pagina_fut_numero_jogadores"
            tools:text="3 mensalistas"/>

        <TextView
            android:id="@+id/activity_pagina_fut_texto_preco_da_quadra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
