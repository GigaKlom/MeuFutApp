            tools:text="4 disponÃ­veis"/>

        <ImageButton
            android:id="@+id/activity_pagina_fut_imagebutton_assistir_rewardedAd"
            android:layout_width="52dp"
            android:layout_height="41dp"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/obter_novo_fut"
            android:src="@android:drawable/ic_media_play"
            app:layout_constraintStart_toEndOf="@+id/activity_pagina_fut_textview_novos_jogadores_disponiveis"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/round_button"
            app:tint="@color/black"/>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/activity_pagina_fut_group_novos_futs_disponiveis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
