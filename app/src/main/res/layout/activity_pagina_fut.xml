            tools:text="R$ 600,00" />

        <TextView
            android:id="@+id/activity_pagina_fut_texto_ganho_com_mensalistas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            android:text="@string/ganho_com_mensalistas"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_pagina_fut_texto_preco_da_quadra" />

        <TextView
            android:id="@+id/activity_pagina_fut_ganho_esperado_mensalistas"
            android:layout_width="wrap_content"
